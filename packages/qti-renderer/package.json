{
  "name": "@ae-studio/qti-renderer",
  "version": "0.1.3",
  "description": "Framework-agnostic QTI 3.x renderer and validator with WASM-powered client-side XML schema validation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/qti-base.css": "./dist/qti-base.css",
    "./dist/qti-custom.css": "./dist/qti-custom.css"
  },
  "scripts": {
    "generate-schemas": "tsx scripts/generate-schemas.ts",
    "build:assets": "mkdir -p dist && rsync -a --exclude='*.css' assets/ dist/",
    "build:css": "mkdir -p dist && postcss assets/qti-base.css -o dist/qti-base.css && postcss assets/qti-custom.css -o dist/qti-custom.css",
    "build": "npm run generate-schemas && tsc && npm run build:assets && npm run build:css",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "update-schemas": "tsx scripts/update-schemas.ts",
    "test-validation": "tsx scripts/test-validation.ts"
  },
  "keywords": [
    "qti",
    "qti-3",
    "qti-3.0",
    "qti-renderer",
    "qti-validator",
    "qti-validation",
    "qti-schema",
    "assessment",
    "renderer",
    "validator",
    "validation",
    "xml-validation",
    "wasm",
    "webassembly",
    "ims-qti",
    "question-test-interoperability"
  ],
  "author": "AE Studio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agencyenterprise/qti-3-player.git"
  },
  "homepage": "https://github.com/agencyenterprise/qti-3-player#readme",
  "bugs": {
    "url": "https://github.com/agencyenterprise/qti-3-player/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-nested": "^7.0.2",
    "@vitest/ui": "^4.0.17",
    "@xmldom/xmldom": "^0.8.10",
    "jsdom": "^27.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "xmllint-wasm": "^5.1.0"
  }
}
